require 'rubygems'
require 'rake'
require 'echoe'

Echoe.new('wsio', '0.0.4') do |p|
  p.description    = "Web stream input/output tool"
  p.url            = "http://github.com/progrium/wsio"
  p.author         = "Jeff Lindsay"
  p.email          = "jeff.lindsay@twilio.com"
  p.ignore_pattern = ["tmp/*", "script/*"]
  p.executable_pattern = ["bin/*"]
  p.runtime_dependencies = ["highline >=1.5.2", "json >=1.2.4", "httpclient >=2.1.5.2"]
  p.development_dependencies = []
end